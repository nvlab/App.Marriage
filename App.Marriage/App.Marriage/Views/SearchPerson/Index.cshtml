
@using App.Marriage.Utils

<div class="container-fluid" dir="rtl">
    <form class="form-horizontal col-sm-10">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-1 control-label">@Globalization.App_living :</label>
            <div class="col-sm-2">
                @Html.DevExpress().ComboBox(settings =>
                              {
                                  settings.Name = "Country";
                                  settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                                  settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                  settings.Properties.ValueType = typeof(int);
                                  settings.Properties.ValueField = "Id";
                                  settings.Properties.TextField = "Name";
                                  settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                              }).BindList(ViewData["Country"]).GetHtml()
            </div>
            <label for="inputPassword3" class="col-sm-offset-0 col-sm-1 control-label">@Globalization.App_Age :</label>
            <div class="col-sm-2">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
            </div>
            <label for="inputPassword3" class="col-sm-offset-0 col-sm-1 control-label">@Globalization.App_Education :</label>
            <div class="col-sm-2">
                @Html.DevExpress().ComboBox(settings =>
           {
               settings.Name = "Education";
               settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
               settings.Properties.DropDownStyle = DropDownStyle.DropDown;
               settings.Properties.Items.Add(@Globalization.Colleage, "Colleage");
               settings.Properties.Items.Add(@Globalization.HighSchool, "HighSchool");
               settings.Properties.Items.Add(@Globalization.None, "None");
               settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
           }).GetHtml()
            </div>
            <label for="inputPassword3" class="col-sm-offset-0 col-sm-1 control-label">@Globalization.App_Nationality :</label>
            <div class="col-sm-2">
                @Html.DevExpress().ComboBox(settings =>
                              {
                                  settings.Name = "Nationality";
                                  settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                                  settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                                  settings.Properties.ValueType = typeof(int);
                                  settings.Properties.ValueField = "Id";
                                  settings.Properties.TextField = "Name";
                                  settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                              }).BindList(ViewData["Nationality"]).GetHtml()
            </div>
            <label for="inputPassword3" class="col-sm-offset-0 col-sm-1 control-label">@Globalization.App_SocialStatus :</label>
            <div class="col-sm-2">
                @Html.DevExpress().ComboBox(settings =>
{
    settings.Name = "Gender";
    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
    settings.Properties.Items.Add(@Globalization.Male, "Male");
    settings.Properties.Items.Add(@Globalization.Femal, "Femal");
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
}).GetHtml()


                <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
            </div>
            <label for="inputPassword3" class="col-sm-offset-0 col-sm-1 control-label">@Globalization.App_Work :</label>
            <div class="col-sm-2">
                <input type="text" class="form-control" id="Works" placeholder="@Globalization.App_Work">
            </div>

        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Sign in</button>
            </div>
        </div>
    </form>
    <div class="content">

    @*//    @Html.Action("PersonGVP", "FindPerson")*@


    </div>
</div>

