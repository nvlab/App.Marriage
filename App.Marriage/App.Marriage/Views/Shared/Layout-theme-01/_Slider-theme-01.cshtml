@using App.Marriage.Helpars
<section id="hero" class="section-hero">
    <div class="owl-carousel owl-full-width owl-theme" style="direction: ltr;">
        <div class="item"><img src="~/Content/theme-01/images/image-1.jpg" alt="" class="img-as-bg"></div>
        <div class="item"><img src="~/Content/theme-01/images/image-2.jpg" alt="" class="img-as-bg"></div>
        <div class="item"><img src="~/Content/theme-01/images/image-3.jpg" alt="" class="img-as-bg"></div>
        <div class="item"><img src="~/Content/theme-01/images/image-4.jpg" alt="" class="img-as-bg"></div>
        <div class="item"><img src="~/Content/theme-01/images/image-5.jpg" alt="" class="img-as-bg"></div>
    </div>
    <div class="announcement-wrapper">
        <div class="announcement animation-chain" data-animation="fadeInUp">
            <div class="heart">
                <svg width="38px" height="35px" viewBox="0 0 38 35">
                    <use class="shape-heart" xlink:href="~/Content/theme-01/img/heart.svg#shape-heart"></use>
                </svg>
            </div>
            <div class="decor decor-inverse">
                <svg width="281px" height="51px" viewBox="0 0 281 51">
                    <use class="shape-decor" xlink:href="~/Content/theme-01/img/decor.svg#shape-decor"></use>
                </svg>
            </div>
            <h2>نعمل على  مساعدتكم</h2>
            <h1><span class="name">سكنى</span><span class="and"></span><span class="name">للزواج</span></h1>
            <p class="date"><span>2017</span></p>
            <div class="decor">
                <svg width="281px" height="51px" viewBox="0 0 281 51">
                    <use class="shape-decor" xlink:href="~/Content/theme-01/img/decor.svg#shape-decor"></use>
                </svg>
            </div>
        </div>
        <div class="cta">
            @if (!Request.IsAuthenticated)
            {
                <a href="#register" class="btn btn-info scroll-link btn-big">أشترك الان</a>
                <a href="/Account/Login" class="btn btn-success btn-big">سجل دخول الى حسابك</a>
            }
            else
            {
                <a href="#" class="btn btn-default btn-big" style="color:#607D8B">
                    اهلا بك @UserHelpar.GetUser().UserName
                </a>
            }
            <a href="#Search" class="btn btn-primary scroll-link btn-big">هل تبحث عن شريك ؟</a>
        </div>
    </div>
    <div class="scroll-down"></div>
</section>
