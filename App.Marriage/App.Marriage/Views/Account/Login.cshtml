@using App.Marriage.Models
@using App.Marriage.Models.UserMV
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl , RelationRequestUserId =ViewBag.RelationRequestUserId }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>قم بستجيل دخولك الى النظام</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
