@using App.Marriage.Utils
@{
    ViewBag.Title = "ControlPanel";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @Globalization.controlPanel
        <small>الاصدار 17.06.12</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> النظام</a></li>
        <li class="active"></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@ViewBag.PersonCount</h3>
                    <p>المشتركين</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="/Person/ShowAll" class="small-box-footer">المزيد  <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@ViewBag.RegisterRequestCount<sup style="font-size: 20px">%</sup></h3>
                    <p>طالبات التسجيل</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/RegisterRequest" class="small-box-footer">المزيد <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@ViewBag.RelationRequestCount</h3>
                    <p>طلبات الارتباط</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/RelationRequests" class="small-box-footer">المزيد <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <!-- Chat box -->
    <div class="box box-success">
        <div class="box-header">
            <i class="fa fa-comments-o"></i>
            <h3 class="box-title"></h3>
            <div class="box-tools pull-right" data-toggle="tooltip" title="Status">
                
            </div>
        </div>
        <div class="box-body chat" id="chat-box">
            <h1>اهلا بك   </h1>
        </div>
        <!-- /.chat -->
        <div class="box-footer">
            
        </div>
    </div>
    <!-- /.box (chat box) -->
</section>
<!-- /.content -->